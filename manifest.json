{
  "name": "Greppo",
  "version": "1.0",
  "manifest_version": 2,
  "description": "This extension automatically highlights keywords on a web page",
  "homepage_url": "http://extensionizr.com",
  "icons": {
    "128": "icons/icon128.png"
  },
  "options_page": "src/options_custom/index.html",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Greppo",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "background": {
    "persistent": true,
    "scripts": ["src/bg.js"]
  },  
  "permissions": [
    "tabs", "storage"
  ],
  "commands": {
    "toggle-greppo": {
      "suggested_key": {
        "default": "Alt+Shift+G",
        "mac": "Alt+Shift+G",
        "windows": "Alt+Shift+G",
        "linux": "Alt+Shift+G"
      },
      "description": "Toggle Greppo"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*", "https://*/*"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "http://*/*", "https://*/*"
      ],
      "js": [
        "js/jquery/jquery.min.js",
        "src/hilitor.js",
        "src/inject/inject.js"
      ]
    }
  ]
}
